    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
    <script type="text/javascript" src="/js/script.js"></script>
    <title>Todo-App</title>
</head>
<body class="flex-row">
    <h2 id="todo-app-title">TODO-APP</h2>
    <div>
        <!-- create todo form  -->
        <form action="/create-todo" method = "POST" id="create-todo-form" class="">
            <!-- todo descrition input -->
                <div class="flex-col border-black">
                    <label for="description">Description</label>
                    <input type="text" name="description" id="description" class="border-style-none" placeholder="What do you need to do?">
                </div>
                <!-- todo category input  -->
                <div class="flex-col border-black">
                    <label for="category">Category</label>
                    <select name="category" id="category" class="border-style-none">
                        <option value="none">Choose a category</option>
                        <option value="personal">Personal</option>
                        <option value="work">Work</option>
                        <option value="cleaning">Cleaning</option>
                        <option value="school">School</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <!-- due date input  -->
                <div class="flex-col border-black">
                    <label for="due_date">Due-Date</label>
                    <input type="date" id="due_date" name="due_date" class="border-style-none">
                </div>
                <!-- add todo button  -->
                <div class="flex-row" id="add-todo">
                    <i class="fas fa-plus"></i>
                    <input type="submit" value="ADD TODO" >
                </div>
            

        </form>
    </div>
  <!-- display todo section  -->
    <div id="display-todo">
        <ul class="flex-col">
           <%for(let i of todo_list){%>
                
                <li class="flex-row" onclick="displaySelectedTodo(this)">
                
                    <!-- display descripition of ith todo  -->
                    <div class="description">
                        <%= i.description %>
                    </div>
                    <!-- due date of ith todo  -->
                    <div class="flex-row due-date">
                         <i class="fas fa-calendar-alt"></i>
                        <div>
                            <%=i.due_date.getDate() %>
                            /
                            <%=i.due_date.getMonth() +1%>
                            /
                            <%=i.due_date.getFullYear()%>
                        </div>
                    </div>
                    <!-- display category of ith todo  -->
                    <div class="category">
                        <%= i.category %>
                    </div>
                    <!-- delete todo button  -->
                    <div class="flex-row delete-todo">
                        <a href="/delete-todo/?id=<%=i._id%>">
                            <i class = "fas fa-trash-alt"></i>
                        </a>
                    </div>
                  
     
                </li>

            <%}%>
        </ul>

        
    </div>
    <!-- section to display seclected todo  -->
    <div id="display-selected-todo"></div>
    

    
</body>
</html>